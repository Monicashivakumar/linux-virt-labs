apiVersion: v1
kind: PersistentVolume
metadata:
  name: fss-pv
spec:
 capacity:
   storage: 50Gi
 volumeMode: Filesystem
 accessModes:
   - ReadWriteMany
 persistentVolumeReclaimPolicy: Retain
 csi:
   driver: fss.csi.oraclecloud.com
   volumeHandle: {{ file_system_id }}:{{ mount_target_ip_address }}:{{ export_path }}
